<button type="button" class="btn btn-primary expanded-button" data-toggle="modal" data-target="#shiftModal">New Shift</button>
<div class="modal fade" id="shiftModal" role="dialog">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <span class="modal-title">Add Shift</span>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <%= form_for @shift, method: 'post' do |f| %>
            <div class="row button-inline-align">
              <div class="col-sm-2">
                <label for="name">Shift Name:</label>
                <%= f.text_field :name, class: 'form-control' %>
              </div>
              <div class="col-sm-2">
                <label for="start_time">Start Time:</label>
                <%= f.time_field :start_time, value: "%H:%M", class: 'form-control' %>
              </div>
              <div class="col-sm-2">
                <label for="end_time">End Time:</label>
                <%= f.time_field :end_time, value: "%H:%M", class: 'form-control' %>
              </div>
              <div class="col-sm-2">
                <label for="split">Split Shift:</label>
                <%= f.check_box :split, class: 'form-control' %>
                <span class="checkbox-label">Split?</span>
              </div>
              <div class="col-sm-2">
                <label for="split_hours">Split Hours:</label>
                <%= f.number_field :split_hour, class: 'form-control' %>
              </div>
              <div class="col-sm-2">
                <label for="split_start">Split From:</label>
                <%= f.time_field :split_start, value: "%H:%M", class: 'form-control' %>
              </div>
              <div class="col-sm-9"></div>
              <div class="col-sm-3">
                <%= f.submit "Add Shift", class: 'btn btn-primary expanded-button' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
