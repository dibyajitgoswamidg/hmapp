<button type="button" class="btn btn-primary expanded-button" data-toggle="modal" data-target="#groupUpdateModal">New Group</button>
<div class="modal fade" id="groupUpdateModal" role="dialog">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <span class="modal-title">+</span>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <%= form_for @group, method: 'patch' do |f| %>
            <div class="row button-inline-align">
              <div class="col-sm-4">
                <label for="name">Group Name:</label>
                <%= f.text_field :name, class: 'form-control' %>
              </div>
              <div class="col-sm-4">
                <label for="start_date">Start Date:</label>
                <%= f.date_field :start_date, class: 'form-control' %>
              </div>
              <div class="col-sm-4">
                <label for="end_date">End Date:</label>
                <%= f.date_field :end_date, class: 'form-control' %>
              </div>
              <div class="col-sm-4">
                <label for="split">Employee Type:</label>
                <%= f.select :employee_type_id, options_from_collection_for_select(@employee_types, 'id', 'name'), {}, class: 'form-control' %>
              </div>
              <div class="col-sm-4">
                <label for="split">Shift:</label>
                <%= f.select :shift_id, options_from_collection_for_select(@shifts, 'id', 'name'), {}, class: 'form-control' %>
              </div>
              <div class="col-sm-1"></div>
              <div class="col-sm-3">
                <%= f.submit "Add Group", class: 'btn btn-primary expanded-button' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
