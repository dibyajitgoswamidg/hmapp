<button type="button" class="btn btn-primary expanded-button" data-toggle="modal" data-target="#departmentModal">Add Department</button>
<div class="modal fade" id="departmentModal" role="dialog">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <span class="modal-title">Add Department</span>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <%= form_for department_index_path, method: 'post' do |f| %>
            <div class="row button-inline-align">
              <div class="col-sm-6">
                <label for="name">Department Name:</label>
                <%= f.text_field :name, class: 'form-control' %>
              </div>
              <div class="col-sm-6">
                <%= f.submit "Add Department", class: 'btn btn-primary expanded-button' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
