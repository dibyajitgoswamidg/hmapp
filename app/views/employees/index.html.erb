<h3>Employee</h3>
<div class="row option-header">
  <div class="col-sm-2">
    <%= render "new_employee_form" %>
  </div>
  <div class="col-sm-2">
    <%= render "employee_types/form" %>
  </div>
</div>
<div class="row">
  <div class="col-sm-10">
    <table class="table table-striped">
      <thead>
      <tr>
        <th>Name</th>
        <th>Profession</th>
        <th>Gender</th>
        <th>Contact</th>
        <th>Address</th>
        <th>Group</th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% @employees.each do |f| %>
        <tr>
          <td><%= f.first_name %> <%= f.last_name %></td>
          <td><%= @employee_types.find(f.employee_type_id).name %></td>
          <td><%= gender(f.gender) %></td>
          <td><%= f.contact_number %>, <%= f.alternate_contact_number %></td>
          <td><%= f.address_line %>, <%= f.city %>, <%= f.country %></td>
          <td><%= @groups.find(f.group_id).name %></td>
          <td><%= link_to 'Edit', edit_employee_path(f.id) %>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-sm-2">
    <%= render partial: "employee_types/index" %>
  </div>
</div>
